#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import BorderBehavior borderbehaviour

MyScreenManager:
    id: dict_sm
    transition: FadeTransition()
    HomeScreen
    AddScreen
    SearchScreen
    ListScreen
    DictScreen
    EditScreen

<HomeScreenBtn@Button>:
    font_size: 40
    size_hint: 0.5, 0.5

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 100
            text: 'EKT'
            size: self.texture_size
            size_hint_y: None
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 30
            text: 'English - Kapampangan - Tagalog Dictionary'
            size: self.texture_size
            size_hint_y: None
        AnchorLayout:
            HomeScreenBtn:
                text: 'Add Entry'
                on_release: root.manager.current = 'add'
        AnchorLayout:
            HomeScreenBtn:
                text: 'Search'
                on_release: root.manager.current = 'search'
        AnchorLayout:
            HomeScreenBtn:
                text: 'View List'
                on_release: root.manager.current = 'list'
