#:import BorderBehavior components.borderbehaviour

<DSLabel@Label>:
    padding: 30, 30
    color: 1, 1, 1, 1
    font_size: 40
    size: self.texture_size
    size_hint_y: None

<DictScreenBtn@Button>:
    size_hint: None, None
    height: 50
    font_size: 40
    size_hint: 1, 1

<BorderLabel@Label+BorderBehavior>:
    borders: 2, 'solid', (1, 1, 1, 1)
    size_hint: None, None
    height: 100
    width: 1000
    font_size: 50
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size


<DictScreen>:
    name: 'dict_entry'
    BoxLayout:
        orientation: 'vertical'
        Widget:
            size_hint_y: 0.05
        AnchorLayout:
            size_hint_y: 0.85
            GridLayout:
                orientation: 'vertical'
                size_hint_y: 1
                cols: 1
                rows: 7
                padding: 50, 0
                DSLabel:
                    text: 'Kapampangan'
                AnchorLayout:
                    height: 150
                    BorderLabel:
                        id: kapampangan_ds
                DSLabel:
                    text: 'Tagalog'
                AnchorLayout:
                    height: 150
                    BorderLabel:
                        id: tagalog_ds
                DSLabel:
                    text: 'English'
                AnchorLayout:
                    height: 150
                    BorderLabel:
                        id: english_ds
                AnchorLayout:
                    size_hint_y: 0.3
                    Widget:
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.08
            DictScreenBtn:
                text: 'Back'
                on_release: root.on_back()
            Widget:
            DictScreenBtn:
                text: 'Edit'
                on_release: root.on_edit_entry()
            Widget:
            DictScreenBtn:
                text: 'Delete'
                on_release: root.show_delete_popup()

<DeletePopup>:
    size_hint: 0.4, 0.2
    title: 'Delete confirmation'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: delete_label
            text: 'Are you sure to delete this entry?'
        BoxLayout:
            orientation:'horizontal'
            Button:
                size_hint_y: 0.5
                text: 'Delete'
                on_release: root.screen.on_confirm_delete(root)            
            Button:
                size_hint_y: 0.5
                text: 'Cancel'
                on_release: root.dismiss()