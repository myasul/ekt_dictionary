#:import BorderBehavior components.borderbehaviour

<EditScreen>:
    name: 'edit_entry'
    BoxLayout:
        orientation: 'vertical'
        Widget:
            size_hint_y: 0.05
        AnchorLayout:
            size_hint_y: 0.85
            GridLayout:
                size_hint_y: 1
                orientation: 'vertical'
                cols: 1
                rows: 7
                padding: 50, 0
                DSLabel:
                    text: 'Kapampangan'
                AnchorLayout:
                    height: 150
                    EditInput:
                        id: kapampangan_es
                DSLabel:
                    text: 'Tagalog'
                AnchorLayout:
                    height: 150
                    EditInput:
                        id: tagalog_es
                DSLabel:
                    text: 'English'
                AnchorLayout:
                    height: 150
                    EditInput:
                        id: english_es
                AnchorLayout:
                    size_hint_y: 0.3
                    Widget:

        BoxLayout:
            size_hint_y: 0.08
            orientation: 'horizontal'
            DictScreenBtn:
                text: 'Back'
                on_release: root.manager.current = 'dict_entry'
            Widget:
            Widget:
            Widget:
            DictScreenBtn:
                text: 'Save'
                on_release: root.on_save()

<EditInput>:
    size_hint: None, None
    height: 100
    width: 1000
    font_size: 50
    write_tab: False