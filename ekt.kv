#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MyScreenManager:
    transition: FadeTransition()
    HomeScreen
    AddScreen
    SearchScreen
    ListScreen
    
<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 100
            text: 'EKT'
            size: self.texture_size
            size_hint_y: None
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 30
            text: 'English - Kapampangan - Tagalog Dictionary'
            size: self.texture_size
            size_hint_y: None
        AnchorLayout:            
            Button:
                text: 'Add Entry'
                font_size: 40
                size_hint: 0.5, 0.5
                on_release: root.manager.current = 'add'
        AnchorLayout: 
            Button:
                text: 'Search'
                font_size: 40
                size_hint: 0.5, 0.5
                on_release: root.manager.current = 'search'
        AnchorLayout: 
            Button:
                text: 'View List'
                font_size: 40
                size_hint: 0.5, 0.5
                on_release: root.manager.current = 'list'

<AddScreen>:
    name: 'add'
    BoxLayout:
        orientation: 'vertical'
        Label:
            Button:
                id: 'home_button_1'
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<SearchScreen>:
    name: 'search'
    BoxLayout:
        orientation: 'vertical'
        Label:
            Button:
                id: 'home_button_2'
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<ListScreen>:
    name: 'list'
    BoxLayout:
        orientation: 'vertical'
        Label:
            Button:
                id: 'home_button_3'
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'
