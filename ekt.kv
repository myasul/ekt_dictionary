#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MyScreenManager:
    id: dict_sm
    transition: FadeTransition()
    HomeScreen
    AddScreen
    SearchScreen
    ListScreen
    DictScreen

<HomeScreenBtn@Button>:
    font_size: 40
    size_hint: 0.5, 0.5

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 100
            text: 'EKT'
            size: self.texture_size
            size_hint_y: None
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 30
            text: 'English - Kapampangan - Tagalog Dictionary'
            size: self.texture_size
            size_hint_y: None
        AnchorLayout:
            HomeScreenBtn:
                text: 'Add Entry'
                on_release: root.manager.current = 'add'
        AnchorLayout:
            HomeScreenBtn:
                text: 'Search'
                on_release: root.manager.current = 'search'
        AnchorLayout:
            HomeScreenBtn:
                text: 'View List'
                on_release: root.manager.current = 'list'

<DictInput@TextInput>:
    font_size: 20
    # font_size: 30
    size_hint: None, None
    width: 600
    height: 50
    # height: 120
    multiline: True
    write_tab: False

<ASLabel@Label>:
    padding: 5, 5
    # padding: 30, 30
    color: 1, 1, 1, 1
    font_size: 20
    # font_size: 30
    size: self.texture_size
    size_hint_y: None

<AddScreen>:
    name: 'add'
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, .9
            GridLayout:
                rows: 7
                cols: 1
                padding: 10, 10, 10, 10
                ASLabel:
                    text: 'Kapampangan'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: k_input
                ASLabel:
                    text: 'Tagalog'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: t_input
                ASLabel:
                    text: 'English'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: e_input
                AnchorLayout:
                    size_hint_y: None
                    height: 70
                    # height: 100
                    Button:
                        id: 'add_to_dict'
                        text: 'Save'
                        font_size: 30
                        size_hint: 0.3, 1
                        on_release: root.add_entry()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            Button:
                size_hint: None, None
                height: 50
                id: home_button_2
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<SearchScreen>:
    name: 'search'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            size_hint: 1, .9
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            Button:
                size_hint: None, None
                height: 50
                id: home_button_2
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<ListScreen>:
    name: 'list'
    BoxLayout:
        id: list_box
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                size_hint: 1, .9
                canvas:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: list_grid
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 100
                cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            Button:
                size_hint: None, None
                height: 50
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<DSLabel@Label>:
    padding: 5, 5
    color: 1, 1, 1, 1
    font_size: 25
    size: self.texture_size
    size_hint_y: None

<DictScreen>:
    name: 'dict_entry'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            size_hint: 1, .9
            row_default_height: 100
            cols: 1
            rows: 3
            DSLabel:
                id: kapampangan_ds
                text: ''
            DSLabel:
                id: tagalog_ds
                text: ''
            DSLabel:
                id: english_ds
                text: ''

        BoxLayout:
            size_hint: 1, .1
            orientation: 'vertical'
            Button:
                size_hint: None, None
                height: 50
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'