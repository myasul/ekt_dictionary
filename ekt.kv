#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MyScreenManager:
    transition: FadeTransition()
    HomeScreen
    AddScreen
    SearchScreen
    ListScreen

<HomeScreenBtn@Button>:
    font_size: 40
    size_hint: 0.5, 0.5

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 100
            text: 'EKT'
            size: self.texture_size
            size_hint_y: None
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 30
            text: 'English - Kapampangan - Tagalog Dictionary'
            size: self.texture_size
            size_hint_y: None
        AnchorLayout:            
            HomeScreenBtn:
                text: 'Add Entry'
                on_release: root.manager.current = 'add'
        AnchorLayout: 
            HomeScreenBtn:
                text: 'Search'
                on_release: root.manager.current = 'search'
        AnchorLayout: 
            HomeScreenBtn:
                text: 'View List'
                on_release: root.manager.current = 'list'

<DictInput@TextInput>:
    font_size: 35
    size_hint: None, None
    width: 600
    height: 120
    on_text_validate: self.on_enter()
    multiline: True

<AddScreenLabel@Label>:
    padding: 30, 30
    color: 1, 1, 1, 1
    font_size: 30
    size: self.texture_size
    size_hint_y: None

<AddScreen>:
    name: 'add'
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            GridLayout:
                rows: 7
                cols: 1
                padding: 30, 30, 30, 30
                AddScreenLabel:
                    text: 'Kapampangan'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: k_input
                AddScreenLabel:
                    text: 'Tagalog'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: t_input
                AddScreenLabel:
                    text: 'English'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: e_input
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    Button:
                        id: 'add_to_dict'
                        text: 'Save'
                        font_size: 30
                        size_hint: 0.3, 0.5
                        on_release: root.add_entry()
        Label:
            Button:
                id: 'home_button_1'
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<SearchScreen>:
    name: 'search'
    BoxLayout:
        orientation: 'vertical'
        Label:
            Button:
                id: 'home_button_2'
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<ListScreen>:
    name: 'list'
    BoxLayout:
        orientation: 'vertical'
        Label:
            Button:
                id: 'home_button_3'
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'
