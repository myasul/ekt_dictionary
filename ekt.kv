#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import BorderBehavior borderbehaviour

MyScreenManager:
    id: dict_sm
    transition: FadeTransition()
    HomeScreen
    AddScreen
    ListScreen
    DictScreen
    EditScreen

<HomeScreenBtn@Button>:
    font_size: 40
    size_hint: 0.5, 0.2

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 100
            text: 'EKT'
            size: self.texture_size
            size_hint_y: None
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 30
            text: 'English - Kapampangan - Tagalog Dictionary'
            size: self.texture_size
            size_hint_y: None
        AnchorLayout:
            HomeScreenBtn:
                text: 'Add Entry'
                on_release: root.manager.current = 'add'
        AnchorLayout:
            HomeScreenBtn:
                text: 'View List'
                on_release: root.manager.current = 'list'

<DictInput>:
    font_size: 20
    # font_size: 30
    size_hint: None, None
    width: 600
    height: 50
    # height: 120
    write_tab: False

<ASLabel@Label>:
    padding: 5, 5
    # padding: 30, 30
    color: 1, 1, 1, 1
    font_size: 20
    # font_size: 30
    size: self.texture_size
    size_hint_y: None

<AddScreen>:
    name: 'add'
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, .9
            GridLayout:
                rows: 7
                cols: 1
                padding: 10, 10, 10, 10
                ASLabel:
                    text: 'Kapampangan'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: k_input
                ASLabel:
                    text: 'Tagalog'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: t_input
                ASLabel:
                    text: 'English'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: e_input
                AnchorLayout:
                    size_hint_y: None
                    height: 70
                    # height: 100
                    Button:
                        id: 'add_to_dict'
                        text: 'Save'
                        font_size: 30
                        size_hint: 0.3, 1
                        on_release: root.add_entry()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            Button:
                size_hint: None, None
                height: 50
                id: home_button_2
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<ListScreen>:
    name: 'list'
    BoxLayout:
        id: list_box
        orientation: 'vertical'
        AnchorLayout:
            size_hint_y: .1
            SearchTextInput:
                font_size: 25
                size_hint: .8, .5
        
        ScrollView:
            size_hint: 1, .8
            GridLayout:
                id: list_grid
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                row_default_height: 100
                cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            Button:
                size_hint: None, None
                height: 50
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<DSLabel@Label>:
    padding: 5, 5
    color: 1, 1, 1, 1
    font_size: 25
    size: self.texture_size
    size_hint_y: None

<DictScreenBtn@Button>:
    size_hint: None, None
    height: 50
    font_size: 20

<BorderLabel@Label+BorderBehavior>:
    borders: 2, 'solid', (1, 1, 1, 1)
    size_hint: None, None
    height: 70
    width: 600
    font_size: 20
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size


<DictScreen>:
    name: 'dict_entry'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            size_hint: 1, .9
            row_default_height: 100
            cols: 1
            rows: 6
            DSLabel:
                text: 'Kapampangan'
            AnchorLayout:
                BorderLabel:
                    id: kapampangan_ds
                    text: 'Test Label'
            DSLabel:
                text: 'Tagalog'
            AnchorLayout:
                BorderLabel:
                    id: tagalog_ds
                    text: 'Test Label'
            DSLabel:
                text: 'English'
            AnchorLayout:
                BorderLabel:
                    id: english_ds
                    text: 'Test Label'

        BoxLayout:
            size_hint: 1, .1
            orientation: 'horizontal'
            DictScreenBtn:
                text: 'Back'
                on_release: root.manager.current = 'list'
            Widget:
            DictScreenBtn:
                text: 'Edit'
                on_release: root.on_edit_entry()
            Widget:
            DictScreenBtn:
                text: 'Delete'
                on_release: root.show_delete_popup()

<DeletePopup>:
    size_hint: 0.4, 0.2
    title: 'Delete confirmation'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: delete_label
            text: 'Are you sure to delete this entry?'
        BoxLayout:
            orientation:'horizontal'
            Button:
                size_hint_y: 0.5
                text: 'Delete'
                on_release: root.screen.on_confirm_delete(root)            
            Button:
                size_hint_y: 0.5
                text: 'Cancel'
                on_release: root.dismiss()

<EditInput>:
    size_hint: None, None
    height: 70
    width: 600
    font_size: 20
    write_tab: False

<EditScreen>:
    name: 'edit_entry'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            size_hint: 1, .9
            row_default_height: 100
            cols: 1
            rows: 6
            DSLabel:
                text: 'Kapampangan'
            AnchorLayout:
                EditInput:
                    id: kapampangan_es
            DSLabel:
                text: 'Tagalog'
            AnchorLayout:
                EditInput:
                    id: tagalog_es
            DSLabel:
                text: 'English'
            AnchorLayout:
                EditInput:
                    id: english_es

        BoxLayout:
            size_hint: 1, .1
            orientation: 'horizontal'
            DictScreenBtn:
                text: 'Back'
                on_release: root.manager.current = 'dict_entry'
            Widget:
            DictScreenBtn:
                text: 'Save'
                on_release: root.on_save()