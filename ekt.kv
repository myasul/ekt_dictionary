#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import BorderBehavior borderbehaviour

MyScreenManager:
    id: dict_sm
    transition: FadeTransition()
    HomeScreen
    AddScreen
    SearchScreen
    ListScreen
    DictScreen
    EditScreen

<HomeScreenBtn@Button>:
    font_size: 40
    size_hint: 0.5, 0.5

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: 10, 10
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 100
            text: 'EKT'
            size: self.texture_size
            size_hint_y: None
        Label:
            center: self.parent.center
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_size: 30
            text: 'English - Kapampangan - Tagalog Dictionary'
            size: self.texture_size
            size_hint_y: None
        AnchorLayout:
            HomeScreenBtn:
                text: 'Add Entry'
                on_release: root.manager.current = 'add'
        AnchorLayout:
            HomeScreenBtn:
                text: 'Search'
                on_release: root.manager.current = 'search'
        AnchorLayout:
            HomeScreenBtn:
                text: 'View List'
                on_release: root.manager.current = 'list'

<DictInput>:
    font_size: 20
    # font_size: 30
    size_hint: None, None
    width: 600
    height: 50
    # height: 120
    write_tab: False

<ASLabel@Label>:
    padding: 5, 5
    # padding: 30, 30
    color: 1, 1, 1, 1
    font_size: 20
    # font_size: 30
    size: self.texture_size
    size_hint_y: None

<AddScreen>:
    name: 'add'
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            size_hint: 1, .9
            GridLayout:
                rows: 7
                cols: 1
                padding: 10, 10, 10, 10
                ASLabel:
                    text: 'Kapampangan'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: k_input
                ASLabel:
                    text: 'Tagalog'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: t_input
                ASLabel:
                    text: 'English'
                AnchorLayout:
                    size_hint_y: None
                    height: 150
                    DictInput:
                        id: e_input
                AnchorLayout:
                    size_hint_y: None
                    height: 70
                    # height: 100
                    Button:
                        id: 'add_to_dict'
                        text: 'Save'
                        font_size: 30
                        size_hint: 0.3, 1
                        on_release: root.add_entry()
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            Button:
                size_hint: None, None
                height: 50
                id: home_button_2
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<SearchInput@TextInput>:
    size_hint_x: 0.8
    size_hint_y: None
    height: 70
    font_size: 40
    write_tab: False

<SearchBox@BoxLayout+BorderBehavior>:
    borders: 2, 'solid', (1, 1, 1, 1)

<SearchScreen>:
    name: 'search'
    BoxLayout:
        orientation: 'vertical'
        SearchBox:
            size_hint_y: 0.2
            orientation: 'vertical'
            AnchorLayout:
                size_hint_y: 0.70
                SearchInput:
                    id: search_input
            AnchorLayout:
                size_hint_y: 0.20
                BoxLayout:
                    size_hint_x: 0.8
                    spacing: 100
                    Button:
                        text: 'Filters'
                        on_release: root.show_filter_popup()
                    Button:
                        text: 'Search'
                        on_release: root.on_search()
            Widget:
                size_hint_y: 0.1
        Widget:       
            size_hint_y: 0.7   
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Button:
                size_hint: None, None
                height: 50
                id: home_button_2
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<FilterLabel@Label+BorderBehavior>:
    borders: 2, 'solid', (1, 1, 1, 1)

<FilterBorderGrid@GridLayout+BorderBehavior>:
    borders: 2, 'solid', (1, 1, 1, 1)

<FilterToggleBtn>:
    group: 'language'

<FilterLabel@Label>:
    size_hint_x: None
    width: 100
    size: self.texture_size
    text: 'Exact match'
    font_size: 20
    halign: 'left'
    valign: 'middle'

<FilterCheckBox@CheckBox>:
    size_hint_x: None
    width: 50
    color: 1, 0, 1, 4
    allow_no_selection: False


<FilterPopup>:
    id: filter_popup
    size_hint: 0.4, 0.5
    title: 'Filters'
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.2
            text: 'Search Mode'
            font_size: 20
        FilterBorderGrid:
            size_hint_y: 0.6
            cols: 1
            rows: 5
            Widget:
                size_hint_y: 0.1
            BoxLayout:
                FilterCheckBox:
                    id: match
                    active: False
                    on_release: root.screen.set_match(self.id)
                    group: 'search_mode'
                FilterLabel:
                    text: 'Exact match'
                Widget:
            BoxLayout:
                FilterCheckBox:
                    id: contains
                    active: False
                    group: 'search_mode'
                    on_release: root.screen.set_match(self.id)
                FilterLabel:
                    text: 'Contains'
                Widget:
            BoxLayout:
                FilterCheckBox:
                    id: starts_with
                    active: True
                    group: 'search_mode'
                    on_release: root.screen.set_match(self.id)
                FilterLabel:
                    text: 'Starts with'
                Widget:
            Widget:
                size_hint_y: 0.1w
        Label:
            size_hint_y: 0.2
            text: 'Language to Search'
            font_size: 20
        FilterBorderGrid:
            size_hint_y: 0.6
            cols: 1
            rows: 5
            Widget:
                size_hint_y: 0.1
            BoxLayout:
                FilterCheckBox:
                    id: kapampangan_cb
                    active: False
                    on_release: root.screen.set_language(self.id)
                    group: 'language'
                FilterLabel:
                    text: 'Kapampangan'
                Widget:
            BoxLayout:
                FilterCheckBox:
                    id: english_cb
                    active: False
                    group: 'language'
                    on_release: root.screen.set_language(self.id)
                FilterLabel:
                    text: 'Tagalog'
                Widget:
            BoxLayout:
                FilterCheckBox:
                    id: tagalog_cb
                    active: True
                    group: 'language'
                    on_release: root.screen.set_language(self.id)
                FilterLabel:
                    text: 'English'
                Widget:
            Widget:
                size_hint_y: 0.1
                
        # AnchorLayout:
        #     BoxLayout:
        #         orientation: 'vertical'
        #         size_hint_x: 0.6
        #         spacing: 20
        #         FilterToggleBtn:
        #             id: kapampangan_btn
        #             text: 'Kapampangan'
        #             value: 'kapampangan'
        #             on_release: root.screen.set_language(self.value)

        #         FilterToggleBtn:
        #             id: tagalog_btn
        #             text: 'Tagalog'
        #             value: 'tagalog'
        #             on_release: root.screen.set_language(self.value)
                    
        #         FilterToggleBtn:
        #             id: english_btn
        #             text: 'English'
        #             value: 'english'
        #             on_release: root.screen.set_language(self.value)
                    
        Widget:
            size_hint_y: 0.1

<ListScroll@ScrollView+BorderBehavior>:
    borders: 2, 'solid', (1, 1, 1, 1)

<ListScreen>:
    name: 'list'
    BoxLayout:
        id: list_box
        orientation: 'vertical'
        AnchorLayout:
            size_hint_y: .1
            SearchTextInput:
                font_size: 25
                size_hint: .8, .5
        AnchorLayout:
            size_hint_y: .8
            ListScroll:
                size_hint_x: 0.8
                GridLayout:
                    padding: 15, 0
                    id: list_grid
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 100
                    cols: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            Button:
                size_hint: None, None
                height: 50
                text: 'Back'
                font_size: 20
                on_release: root.manager.current = 'home'

<DSLabel@Label>:
    padding: 5, 5
    color: 1, 1, 1, 1
    font_size: 25
    size: self.texture_size
    size_hint_y: None

<DictScreenBtn@Button>:
    size_hint: None, None
    height: 50
    font_size: 20

<BorderLabel@Label+BorderBehavior>:
    borders: 2, 'solid', (1, 1, 1, 1)
    size_hint: None, None
    height: 70
    width: 600
    font_size: 20
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size


<DictScreen>:
    name: 'dict_entry'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            size_hint: 1, .9
            row_default_height: 100
            cols: 1
            rows: 6
            DSLabel:
                text: 'Kapampangan'
            AnchorLayout:
                BorderLabel:
                    id: kapampangan_ds
            DSLabel:
                text: 'Tagalog'
            AnchorLayout:
                BorderLabel:
                    id: tagalog_ds
            DSLabel:
                text: 'English'
            AnchorLayout:
                BorderLabel:
                    id: english_ds

        BoxLayout:
            size_hint: 1, .1
            orientation: 'horizontal'
            DictScreenBtn:
                text: 'Back'
                on_release: root.manager.current = 'list'
            Widget:
            DictScreenBtn:
                text: 'Edit'
                on_release: root.on_edit_entry()
            Widget:
            DictScreenBtn:
                text: 'Delete'
                on_release: root.show_delete_popup()

<DeletePopup>:
    size_hint: 0.4, 0.2
    title: 'Delete confirmation'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: delete_label
            text: 'Are you sure to delete this entry?'
        BoxLayout:
            orientation:'horizontal'
            Button:
                size_hint_y: 0.5
                text: 'Delete'
                on_release: root.screen.on_confirm_delete(root)            
            Button:
                size_hint_y: 0.5
                text: 'Cancel'
                on_release: root.dismiss()

<EditScreen>:
    name: 'edit_entry'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            orientation: 'vertical'
            size_hint: 1, .9
            row_default_height: 100
            cols: 1
            rows: 6
            DSLabel:
                text: 'Kapampangan'
            AnchorLayout:
                EditInput:
                    id: kapampangan_es
            DSLabel:
                text: 'Tagalog'
            AnchorLayout:
                EditInput:
                    id: tagalog_es
            DSLabel:
                text: 'English'
            AnchorLayout:
                EditInput:
                    id: english_es

        BoxLayout:
            size_hint: 1, .1
            orientation: 'horizontal'
            DictScreenBtn:
                text: 'Back'
                on_release: root.manager.current = 'dict_entry'
            Widget:
            DictScreenBtn:
                text: 'Save'
                on_release: root.on_save()

<EditInput>:
    size_hint: None, None
    height: 70
    width: 600
    font_size: 20
    write_tab: False
